include templates/header.pug
include templates/nav.pug
include templates/title.pug
include templates/recommendation.pug
include templates/main-content.pug
include templates/description.pug
include templates/review.pug


doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width  initial-scale=1')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    title Цветные пластиковые окна
    link(rel='stylesheet', href='css/main.min.css')
  body
    //внешний контайнер
    .wrapper
      //внутренний контайнер для адаптива
      .container
        +header
         +nav
        .content   
          +title
          .content__section
            +recommendation
            section.content__block
              +main-content
              +description
              +review
            
         
    //внешний скрипт      
    script(src='js/script.min.js')
        
